{
  "version": 8,
  "sources": {
    "mapillaryvector": {
      "tiles": [
        "https://a.mapillary.com/v3/tiles/objects/{z}/{x}/{y}.mvt"
      ],
      "type": "vector"
    }
  },
  "sprite": "./images/sprites",
  "layers": [{
    "id": "mapillaryobjects",
    "label": "Mapillary Traffic Signs",
    "type": "symbol",
    "source": "mapillaryvector",
    "source-layer": "mapillary-objects-trafficsigns",
    "interactive": true,
    "minzoom": 12,
    "layout": {
      "icon-image": "{value}",
      "icon-allow-overlap": true,
      "symbol-avoid-edges": true
    },
    "paint": {
      "text-color": "#FFF",
      "text-halo-color": "#000"
    }
  }]
}